  <launch>
    <!--
        TODO: Inlude ZED2 transform from cam_center to left_cam
    -->

    <!--Input args-->
    <!-- <param name ="/use_sim_time" value="true"/> -->
    <arg name="type" default="real"/> 
    <arg name="bagfile" default="$(env HOME)/vortex_ws/src/Vortex-CV/object_edc/bagfiles/lite_gate_medium_sway_backwards_qual.bag" />

    <arg name="gate" default="gate"/>
    <arg name="badge" default="badge"/>
    <arg name="bootlegger" default="bootlegger"/>
    <arg name="gman" default="gman"/>

  
    <group if="$(eval type == 'simulator')">
      <param name ="/use_sim_time" value="true"/>

      <node name="playbag_drone" pkg="rosbag" type="play" required="true" args="--clock -l $(arg bag_drone)" /> 
      <node pkg="vision_kf" type="fake_gate_publisher.py" name="fake_gate"/>


      <node pkg="tf2_ros" type="static_transform_publisher" name="odom_to_qualsys_odom" args="0 0 0 0 0 0 map mocap" output="screen" />
      <node pkg="tf2_ros" type="static_transform_publisher" name="qualsys_base_link_to_camera_center" args="0.3175 0 0.10 0 0 -0.0087266 Body_1 auv/camerafront_link" output="screen" />

      <node name="rviz" pkg="rviz" type="rviz" required="true" args="-d $(find vision_kf)/scripts/visualizer.rviz" />
    </group>
    
    <group if="$(eval type == 'real')"> 
      

      <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_camera_center" args="0.3175 0 0.10 0 0 -0.0087266 base_link zed2_camera_center" />
      
    </group>
 
    <node name="gmf_gate" pkg="gmf" type="gmf_node.py" args="gate" output="screen"/>
    <node name="gmf_badge" pkg="gmf" type="gmf_node.py" args="badge" output="screen"/>
    <node name="gmf_gman" pkg="gmf" type="gmf_node.py" args="gman" output="screen"/>
    <node name="gmf_bootlegger" pkg="gmf" type="gmf_node.py" args="bootlegger" output="screen"/>
    
    <!-- <node pkg="gmf" type="gmf_node.py" name="gmf_node" output="screen"/> -->

  </launch>
